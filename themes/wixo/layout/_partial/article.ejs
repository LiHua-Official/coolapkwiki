<div class="page-header">		
  <h1><a class="brand" href="<%= config.root %>"><%= config.title %></a><span class="split"></span><span class="title"><%= page.title %></span><span class="date" id="title-date"><i class="fa fa-clock-o"></i> <%= page.date.format(config.date_format) %></span></h1>
</div>		

<div class="row page">
  <!-- cols -->	
  <% if (page.toc) { %>
  <div class="col-xs-12 col-sm-3 col-md-3 toc"> 
	<%- partial('post/toc', {page: item}) %>
  </div><!-- col-md-3 -->
  <% } %>
  

  <% if (page.toc) { %>
  <div class="col-xs-12 col-sm-9 col-md-9 note">
	<% } else { %>
	<div class="col-md-12">
	  <% } %>

	  <!-- content -->
	  <%- item.content %>	  

	  <div>
  		<center>
		  <%- partial('post/pagination', {page: item}) %>
		</center>
	  </div>
	  
	</div> <!-- col-md-9/col-md-12 -->
	
  </div><!-- row -->
